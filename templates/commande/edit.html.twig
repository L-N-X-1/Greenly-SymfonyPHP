{% extends 'admin/base.html.twig' %}

{% block title %}Modifier Commande{% endblock %}

{% block body %}
    <div class="container-fluid py-4 d-flex justify-content-center min-vh-100 align-items-center">
        <div class="row w-100">
            <div class="col-12">
                <div class="card my-4">
                    <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                        <div class="bg-gradient-dark shadow-dark border-radius-lg pt-4 pb-3">
                            <h6 class="text-white text-capitalize ps-3">Modifier le statut de la commande</h6>
                        </div>
                    </div>
                    <div class="card-body px-4 pb-2">
                        <div class="container">
                            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                            <table class="table table-bordered">
                                <tbody>
                                    <tr>
                                        <th><label for="id_u" class="form-label">ID Utilisateur</label></th>
                                        <td>{{ commande.idU }}</td>
                                    </tr>
                                    <tr>
                                        <th><label for="montant" class="form-label">Montant</label></th>
                                        <td>{{ commande.montant }} TND</td>
                                    </tr>
                                    <tr>
                                        <th><label for="date" class="form-label">Date</label></th>
                                        <td>{{ commande.date ? commande.date|date('Y-m-d') : 'N/A' }}</td>
                                    </tr>
                                    <tr>
                                        <th><label for="numerot" class="form-label">Numéro de téléphone</label></th>
                                        <td>{{ commande.numerot }}</td>
                                    </tr>
                                     <tr>
                                        <th><label for="statut" class="form-label">Statut</label></th>
                                        <td>{{ form_widget(form.statut, {'attr': {'class': 'form-control', 'id': 'statut'}}) }}</td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="d-flex justify-content-end">
                                <button type="submit" class="btn btn-success me-2">Enregistrer</button>
                                <a href="{{ path('produit_index') }}" class="btn btn-secondary">Retour à la liste</a>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
