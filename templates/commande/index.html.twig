{% extends 'base.html.twig' %}

{% block body %}
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
<style>
    body {
        font-family: 'Poppins', sans-serif;
        color: #333;
    }
    .navbar {
        background-color: rgba(46, 125, 50, 0.9);
        padding: 15px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .navbar .navbar-brand, .navbar .nav-link {
        color: #fff;
    }
    .navbar .nav-link:hover {
        color: #c8e6c9;
    }
    .card-header {
        background: linear-gradient(60deg, #2e7d32, #1b5e20);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }
    .card-header h6 {
        color: #fff;
    }
    .table-container {
        display: flex;
        justify-content: center;
    }
    .table-responsive {
        max-width: 100%;
        margin: auto;
    }
    .table th {
        background-color: #e8f5e9;
        color: #2e7d32;
    }
    .table td {
        color: #333;
    }
    .table-hover tbody tr:hover {
        background-color: #c8e6c9;
    }
    .btn-warning {
        background-color: #ff9800;
        border-color: #ff9800;
    }
    .btn-warning:hover {
        background-color: #fb8c00;
        border-color: #fb8c00;
    }
    .background-container {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: url('/images/background.png') no-repeat center center/cover;
        z-index: -1;
    }
    .forum-container {
        width: 650px;
        height: auto;
        margin: auto;
        padding: 40px;
        background: rgba(200, 200, 200, 0.9);
        border-radius: 20px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
    }
    h2 {
        font-weight: 600;
        color: #2e7d32;
    }
    .form-control {
        width: 100%;
        max-width: 1000px;
        border-radius: 20px;
        text-align: center;
    }
    .btn-success {
        font-weight: 600;
        padding: 12px;
        border-radius: 20px;
        transition: 0.3s;
    }
    .btn-success:hover {
        background-color: #1b5e20;
    }
</style>

<div class="background-container"></div>

<nav class="navbar navbar-expand-lg">
    <div class="container-fluid">
        <a class="navbar-brand" href="{{ path('app_home') }}">Greenly Dashboard</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item"><a class="nav-link" href="{{ path('app_associations') }}">Associations</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('app_evenements') }}">Événements</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('commande_index') }}">Achats</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('app_sponsors') }}">Sponsors</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('app_dons') }}">Dons</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('app_formations') }}">Formations</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('app_modules') }}">Modules</a></li>
            </ul>
        </div>
    </div>
</nav>

<div class="container forum-container mt-5">
    <h2>Ajouter une commande</h2>

        <p><strong>Produit sélectionné :</strong> {{ produit.nom }} - {{ produit.prix }} TND</p>

    {{ form_start(formadd, {'attr': {'novalidate': 'novalidate'}}) }}
        <div class="mb-3">
            {{ form_label(formadd.numerot, 'numero telephone', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(formadd.numerot, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(formadd.numerot) }}
        </div>
        <div class="mb-3">
            {{ form_label(formadd.id_u, "ID de l'itulisateurer", {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(formadd.id_u, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(formadd.id_u) }}
        </div>

        <button type="submit" class="btn btn-success mt-3">Ajouter</button>
    {{ form_end(formadd) }}
</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
{% endblock %}