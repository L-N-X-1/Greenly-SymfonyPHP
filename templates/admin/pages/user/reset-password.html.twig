{% extends 'admin/base.html.twig' %}

{% block title %}Reset Password{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg border-0 rounded">
                    <div class="card-header bg-primary text-white text-center">
                        <h3 class="mb-0">Reset Password</h3>
                    </div>
                    <div class="card-body">
                        {{ include('includes/flashes.twig') }}

                        {{ form_start(reset_user_password, {'attr': {'class': 'needs-validation'}}) }}
                        
                        <div class="mb-3">
                            {{ form_label(reset_user_password.password.first, 'New Password', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(reset_user_password.password.first, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(reset_user_password.password.first, {'attr': {'class': 'text-danger small'}}) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(reset_user_password.password.second, 'Confirm Password', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(reset_user_password.password.second, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(reset_user_password.password.second, {'attr': {'class': 'text-danger small'}}) }}
                        </div>

                        <button type="submit" class="btn btn-primary w-100 mb-2">Reset Password</button>

                        <!-- Back to Users List Button -->
                        <a href="{{ path('app_user_index') }}" class="btn btn-secondary w-100">Back to Users List</a>

                        {{ form_end(reset_user_password) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
