<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>
    Modifier le participant
  </title>
  <!--     Fonts and icons     -->
  <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Inter:300,400,500,600,700,900" />
  <!-- Nucleo Icons -->
  <link href="{{ asset('assets/css/nucleo-icons.css') }}" rel="stylesheet" />
  <link href="{{ asset('assets/css/nucleo-svg.css') }}" rel="stylesheet" />
  <!-- Font Awesome Icons -->
  <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
  <!-- Material Icons -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,400,0,0" />
  <!-- CSS Files -->
  <link id="pagestyle" href="{{ asset('assets/css/material-dashboard.css?v=3.2.0') }}" rel="stylesheet" />
</head>

<body class="g-sidenav-show bg-gray-100">
  {% include 'admin/partials/sidenav.html.twig' %}
  
  <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg">
    <!-- Navbar -->
    {% include 'admin/partials/nav.html.twig' %}
    <!-- End Navbar -->

    <div class="container-fluid py-4">
      <div class="row">
        <div class="col-12">
          <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
              <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                <h6 class="text-white text-capitalize ps-3">Modifier le sponsor</h6>
              </div>
            </div>
            <div class="card-body px-4 pb-2">
              {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                <div class="row">
                  <div class="col-md-6">
                    <div class="input-group input-group-static mb-4">
                      <label>Nom</label>
                      {{ form_widget(form.sponsor_name, {'attr': {'class': 'form-control'}}) }}
                      {{ form_errors(form.sponsor_name) }}
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <div class="input-group input-group-static mb-4">
                      <label>Montant</label>
                      {{ form_widget(form.montant, {'attr': {'class': 'form-control'}}) }}
                      {{ form_errors(form.montant) }}
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="input-group input-group-static mb-4">
                      <label>Evenement</label>
                      {{ form_widget(form.event, {'attr': {'class': 'form-control'}}) }}
                      {{ form_errors(form.event) }}
                    </div>
                  </div>
                </div>

                {{ form_rest(form) }}

                <div class="row">
                  <div class="col-md-12 text-end">
                    <a href="{{ path('admin_evenements_sponsors') }}" class="btn btn-outline-secondary mt-3">Retour</a>
                    <button type="submit" class="btn btn-primary mt-3">Enregistrer</button>
                  </div>
                </div>
              {{ form_end(form) }}

              <!-- Delete Form -->
              <form method="post" action="{{ path('app_sponsor_delete', {'id': sponsor.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce participant?');" class="mt-3">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sponsor.id) }}">
                <button type="submit" class="btn btn-danger">Supprimer</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <!--   Core JS Files   -->
  <script src="{{ asset('assets/js/core/popper.min.js') }}"></script>
  <script src="{{ asset('assets/js/core/bootstrap.min.js') }}"></script>
  <script src="{{ asset('assets/js/plugins/perfect-scrollbar.min.js') }}"></script>
  <script src="{{ asset('assets/js/plugins/smooth-scrollbar.min.js') }}"></script>
  
  <!-- Control Center for Material Dashboard: parallax effects, scripts for the example pages etc -->
  <script src="{{ asset('assets/js/material-dashboard.min.js?v=3.2.0') }}"></script>
</body>
</html>
