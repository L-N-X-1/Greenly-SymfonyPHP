{% extends 'main/barrefor.html.twig' %}

{% block body %}

  <header class="header nav-container">
    <nav>
      <ul>
        <li><a href="{{ path('app_home') }}">Accueil</a></li>
        <li class="dropdown">
          <a href="#">Menu ▾</a>
          <ul class="dropdown-menu">
            <li><a href="{{ path('app_produits') }}">Produits</a></li>
            <li><a href="{{ path('app_associations') }}">Associations</a></li>
            <li><a href="{{ path('app_evenements') }}">Événements</a></li>
            <li><a href="{{ path('app_commandes') }}">Commandes</a></li>
            <li><a href="{{ path('app_sponsors') }}">Sponsors</a></li>
            <li><a href="{{ path('app_dons') }}">Dons</a></li>
            <li><a href="{{ path('app_formations') }}">Formations</a></li>
            <li><a href="{{ path('app_modules') }}">Modules</a></li>
          </ul>
        </li>
      </ul>
    </nav>
  </header>

  <div class="form-container">
    <h3 class="form-title">Inscription</h3>
    <form method="post">
      <div class="mb-3 position-relative">
        <span class="input-group-text"><i class="fas fa-user"></i></span>
        <input type="text" id="name" name="name" class="form-control" placeholder="Nom" required>
      </div>
      <div class="mb-3 position-relative">
        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
        <input type="email" id="email" name="email" class="form-control" placeholder="Email" required>
      </div>
      <div class="mb-3 position-relative">
        <span class="input-group-text"><i class="fas fa-lock"></i></span>
        <input type="password" id="password" name="password" class="form-control" placeholder="Mot de passe" required>
      </div>
      <button type="submit" class="btn btn-green w-100">S'inscrire</button>
    </form>
    <p class="text-center mt-3">
      Vous avez déjà un compte ? <a href="{{ path('app_login') }}" class="text-link">Connectez-vous ici</a>
    </p>
  </div>
</body>
</html>
{% endblock %}