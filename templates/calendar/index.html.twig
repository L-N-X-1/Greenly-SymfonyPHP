{% extends 'base.html.twig' %}

{% block title %}Calendar Events{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Calendar Events</h1>
    
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    
    <div class="mb-4">
        <a href="{{ path('google_auth') }}" class="btn btn-primary">Connect to Google Calendar</a>
    </div>
    
    {% if events is defined and events|length > 0 %}
        <div class="list-group">
            {% for event in events %}
                <div class="list-group-item">
                    <h5>{{ event.summary }}</h5>
                    <p>{{ event.start.dateTime|date('F j, Y, g:i a') }}</p>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p>No upcoming events found.</p>
    {% endif %}
</div>
{% endblock %}