{% extends 'base.html.twig' %}

{% block title %}Inscription à l'événement{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .registration-container {
            max-width: 600px;
            margin: 2rem auto;
            padding: 2rem;
            background: white;
            border-radius: 15px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
        }

        .page-header {
            background: linear-gradient(45deg, #2e7d32, #388e3c);
            color: white;
            padding: 2rem 0;
            margin-bottom: 2rem;
            text-align: center;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        .page-header h1 {
            font-weight: 600;
            margin: 0;
            font-size: 2rem;
        }

        .form-header {
            margin-bottom: 1.5rem;
            text-align: center;
        }

        .form-header h2 {
            color: #2e7d32;
            font-size: 1.5rem;
            margin-bottom: 0.5rem;
        }

        .form-header p {
            color: #666;
            margin-bottom: 0;
        }

        .back-link {
            display: inline-block;
            margin-top: 1rem;
            color: #2e7d32;
            text-decoration: none;
            transition: color 0.3s;
        }

        .back-link:hover {
            color: #1b5e20;
        }

        .back-link i {
            margin-right: 0.5rem;
        }

        /* Form specific styles */
        .form-control, .form-select {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 0.75rem 1rem;
            transition: all 0.3s ease;
        }

        .form-control:focus, .form-select:focus {
            border-color: #2e7d32;
            box-shadow: 0 0 0 0.2rem rgba(46, 125, 50, 0.25);
        }

        .form-label {
            color: #333;
            font-weight: 500;
            margin-bottom: 0.5rem;
        }

        .btn-success {
            background: linear-gradient(45deg, #2e7d32, #388e3c);
            border: none;
            padding: 1rem;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
        }

        .btn-success:hover {
            background: linear-gradient(45deg, #1b5e20, #2e7d32);
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(46, 125, 50, 0.3);
        }

        .btn-outline-success {
            color: #2e7d32;
            border: 2px solid #2e7d32;
            padding: 0.75rem 1.5rem;
            font-weight: 500;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border-radius: 8px;
        }

        .btn-outline-success:hover {
            background: linear-gradient(45deg, #2e7d32, #388e3c);
            border-color: transparent;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(46, 125, 50, 0.2);
        }

        .invalid-feedback {
            color: #dc3545;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }

        /* Animation for form elements */
        .form-control, .form-select, .btn-success {
            animation: fadeInUp 0.5s ease-out;
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
{% endblock %}

{% block body %}
    <style>
        h1 {
            text-align: center;
        }
        .navbar {
            background-color: rgba(46, 125, 50, 0.9);
            padding: 15px;
            margin-bottom: 0;
            border-radius: 0;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .navbar .navbar-brand, .navbar .nav-link {
            color: #fff;
        }

        .navbar .nav-link:hover {
            color: #c8e6c9;
        }
        .page-header {
            background: linear-gradient(45deg, #2e7d32, #388e3c);
            color: white;
            padding: 3rem 0;
            margin-bottom: 3rem;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        .page-header h1 {
            font-weight: 600;
            margin: 0;
        }
        form {
            max-width: 500px;
            margin: auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #d4edda; /* Light green background */
        }
         .back-btn {
            display: block;
            width: 100px;
            margin: 10px auto 0; /* Centers the button */
            text-align: center;
        }
        .form-header {
        margin-bottom: 1.5rem;
        text-align: center; /* Centering text */
        }
        

    </style>
    <div class="hero">
            <img src="{{ asset('images/accueil.png') }}" alt="Page d'accueil" class="img-fluid w-100">
            <div class="hero-text">
                <h1>Inscrivez vous a notre evenement</h1>
                <p>Engageons-nous ensemble pour un avenir plus durable.</p>
            </div>
        </div>

    <div class="container">
        <div class="registration-container">
            <div class="form-header">
                <h2>Formulaire d'inscription</h2>
                <p>Veuillez remplir les informations ci-dessous pour vous inscrire à l'événement.</p>
            </div>

            {{ include('attendee/_form.html.twig') }}

            <div class="d-flex justify-content-center mt-3">
                <a href="{{ path('app_event_index') }}" class="btn btn-outline-success">
                    <i class="fas fa-arrow-left me-2"></i> Retour aux événements
                </a>
            </div>
        </div>
    </div>
{% endblock %}
